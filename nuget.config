<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <config>
    <add key="globalPackagesFolder" value="packages" />
    <add key="repositoryPath" value="packages" />
    <add key="dependencyVersion" value="HighestPrerelease" />
    <!-- Accept prerelease packages for .NET 10 -->
    <add key="allowUnstablePackages" value="true" />
    <!-- Transitive vulnerability warnings are build-time only (MSBuild, JWT test packages) -->
    <!-- See docs/security_vulnerabilities.md for details -->
  </config>
  
  <packageSources>
    <clear />
    <!-- Official NuGet Gallery -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    
    <!-- .NET 10 Public Feed - Contains Aspire 13, .NET 10 previews, and Microsoft packages -->
    <add key="dotnet-public" value="https://pkgs.dev.azure.com/dnceng/public/_packaging/dotnet10/nuget/v3/index.json" />
  </packageSources>
  
  <!-- PackageSourceMapping removed - allowing packages from both sources
       This is necessary because .NET 10 preview packages are split across:
       - dotnet-public: .NET 10 runtime, Aspire, Microsoft.Extensions with 10.0 versions
       - nuget.org: Stable packages, Aspire components not yet in preview feed
       
       Without source mapping, NuGet will correctly resolve from both sources.
       The dependencyVersion=HighestPrerelease setting ensures we get .NET 10 previews. -->
  <packageSourceMapping>
    <!-- Only explicitly map packages that MUST come from dotnet-public -->
    <packageSource key="dotnet-public">
      <!-- .NET 10 runtime and preview Microsoft packages with 10.0.0-* versions -->
      <package pattern="Microsoft.Extensions.Caching.Abstractions" />
      <package pattern="Microsoft.Extensions.Configuration.Binder" />
      <package pattern="Microsoft.Extensions.DependencyInjection" />
      <package pattern="Microsoft.Extensions.DependencyModel" />
      <package pattern="Microsoft.Extensions.Hosting" />
      <package pattern="Microsoft.Extensions.Hosting.Abstractions" />
      <package pattern="Microsoft.Extensions.Logging.Abstractions" />
      <package pattern="Microsoft.Extensions.Options" />
      <!-- .NET 10 Aspire packages -->
      <package pattern="Aspire.Dashboard.*" />
      <package pattern="Aspire.Hosting.*" />
    </packageSource>
    
    <packageSource key="nuget.org">
      <!-- Everything else from nuget.org -->
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
  
  <disabledPackageSources>
    <!-- Disable any potentially problematic sources -->
  </disabledPackageSources>
  
  <activePackageSource>
    <add key="All" value="(Aggregate source)" />
  </activePackageSource>
</configuration>