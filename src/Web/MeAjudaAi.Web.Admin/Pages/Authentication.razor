@page "/authentication/{action}"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@layout EmptyLayout

<RemoteAuthenticatorView Action="@Action">
    <LoggingIn>
        <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex flex-column justify-center align-center" Style="height: 100vh;">
            <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
            <MudText Typo="Typo.h6" Class="mt-4">Entrando...</MudText>
        </MudContainer>
    </LoggingIn>
    <CompletingLoggingIn>
        <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex flex-column justify-center align-center" Style="height: 100vh;">
            <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
            <MudText Typo="Typo.h6" Class="mt-4">Completando login...</MudText>
        </MudContainer>
    </CompletingLoggingIn>
    <CompletingLogOut>
        <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex flex-column justify-center align-center" Style="height: 100vh;">
            <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
            <MudText Typo="Typo.h6" Class="mt-4">Saindo...</MudText>
        </MudContainer>
    </CompletingLogOut>
    <LogOut>
        <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex flex-column justify-center align-center" Style="height: 100vh;">
            <MudText Typo="Typo.h6">Você saiu com sucesso.</MudText>
        </MudContainer>
    </LogOut>
    <LogInFailed>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="mt-8">
            <MudAlert Severity="Severity.Error">
                <MudText Typo="Typo.h5">Falha na Autenticação</MudText>
                <MudText Typo="Typo.body1">Ocorreu um erro ao tentar fazer login. Por favor, tente novamente.</MudText>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/" Class="mt-4">
                    Voltar ao Início
                </MudButton>
            </MudAlert>
        </MudContainer>
    </LogInFailed>
    <LogOutFailed>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="mt-8">
            <MudAlert Severity="Severity.Success">
                <MudText Typo="Typo.h5">Logout Realizado</MudText>
                <MudText Typo="Typo.body1">Você foi desconectado com sucesso.</MudText>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/" Class="mt-4">
                    Voltar ao Início
                </MudButton>
            </MudAlert>
        </MudContainer>
    </LogOutFailed>
</RemoteAuthenticatorView>

@code {
    [Parameter]
    public string? Action { get; set; }
}
