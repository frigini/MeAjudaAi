@using Fluxor
@using MeAjudaAi.Web.Admin.Features.Modules.Providers
@inject IState<ProvidersState> ProvidersState
@inject IDispatcher Dispatcher

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.body1" Class="mb-4">
            Selecione um provedor para visualizar seus documentos:
        </MudText>

        @if (ProvidersState.Value.IsLoading)
        {
            <MudProgressLinear Indeterminate="true" />
        }
        else if (!string.IsNullOrEmpty(ProvidersState.Value.ErrorMessage))
        {
            <MudAlert Severity="Severity.Error">
                @ProvidersState.Value.ErrorMessage
                <MudButton Size="Size.Small" 
                           OnClick="@(() => Dispatcher.Dispatch(new ProvidersActions.LoadProvidersAction(1, 100)))"
                           Class="mt-2">
                    Tentar novamente
                </MudButton>
            </MudAlert>
        }
        else if (ProvidersState.Value.Providers.Any())
        {
            <MudList T="Guid" Clickable="true">
                @foreach (var provider in ProvidersState.Value.Providers)
                {
                    <MudListItem T="Guid" OnClick="@(() => SelectProvider(provider.Id))">
                        <MudStack>
                            <MudText Typo="Typo.body1"><b>@provider.Name</b></MudText>
                            <MudText Typo="Typo.caption">
                                @if (!string.IsNullOrEmpty(provider.Email))
                                {
                                    @provider.Email
                                }
                                @if (!string.IsNullOrEmpty(provider.Email) && !string.IsNullOrEmpty(provider.Document))
                                {
                                    <span class="mx-1">|</span>
                                }
                                @if (!string.IsNullOrEmpty(provider.Document))
                                {
                                    @provider.Document
                                }
                            </MudText>
                        </MudStack>
                    </MudListItem>
                    <MudDivider />
                }
            </MudList>
        }
        else
        {
            <MudAlert Severity="Severity.Info">
                Nenhum provedor encontrado. Carregue a lista de provedores primeiro.
            </MudAlert>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance? MudDialog { get; set; }

    protected override void OnInitialized()
    {
        // Carrega providers se ainda n√£o foi carregado
        if (!ProvidersState.Value.Providers.Any() && !ProvidersState.Value.IsLoading)
        {
            Dispatcher.Dispatch(new ProvidersActions.LoadProvidersAction(1, 100));
        }
    }

    private void SelectProvider(Guid providerId)
    {
        MudDialog?.Close(DialogResult.Ok(providerId));
    }

    private void Cancel()
    {
        MudDialog?.Cancel();
    }
}
