@using Fluxor
@using MeAjudaAi.Web.Admin.Features.Modules.ServiceCatalogs
@using MeAjudaAi.Contracts.Modules.ServiceCatalogs.DTOs
@inject IState<ServiceCatalogsState> ServiceCatalogsState
@inject IServiceCatalogsApi ServiceCatalogsApi
@inject ISnackbar Snackbar
@inject ILogger<CreateServiceDialog> Logger

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success">
            <MudGrid>
                <MudItem xs="12">
                    <MudSelect T="Guid?" @bind-Value="categoryId" 
                               Label="Categoria" 
                               Required="true"
                               RequiredError="Selecione uma categoria"
                               Variant="Variant.Outlined"
                               AnchorOrigin="Origin.BottomCenter">
                        @foreach (var category in ServiceCatalogsState.Value.Categories.Where(c => c.IsActive))
                        {
                            <MudSelectItem T="Guid?" Value="@((Guid?)category.Id)">@category.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <MudItem xs="12">
                    <MudTextField @bind-Value="name" 
                                  Label="Nome do Serviço" 
                                  Required="true"
                                  RequiredError="Nome é obrigatório"
                                  Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12">
                    <MudTextField @bind-Value="description" 
                                  Label="Descrição" 
                                  Lines="3"
                                  Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12">
                    <MudNumericField @bind-Value="displayOrder" 
                                     Label="Ordem de Exibição" 
                                     Min="0"
                                     Variant="Variant.Outlined"
                                     HelperText="Número para ordenação (menor = aparece primeiro)" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">Cancelar</MudButton>
        <MudButton Color="Color.Primary" 
                   Variant="Variant.Filled" 
                   OnClick="Submit" 
                   Disabled="@(!success || isSubmitting)">
            @if (isSubmitting)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                <MudText Class="ms-2">Salvando...</MudText>
            }
            else
            {
                <MudText>Criar</MudText>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance? MudDialog { get; set; }

    private MudForm form = null!;
    private bool success;
    private bool isSubmitting;
    private Guid? categoryId = null; // Changed to nullable
    private string name = string.Empty;
    private string? description;
    private int displayOrder = 0;

    private void Cancel()
    {
        MudDialog?.Cancel();
    }

    private async Task Submit()
    {
        await form.Validate();
        if (!success) return;

        // Validate category selection
        if (categoryId == null || categoryId == Guid.Empty)
        {
            Snackbar.Add("Selecione uma categoria", Severity.Warning);
            return;
        }

        try
        {
            isSubmitting = true;

            var request = new CreateServiceRequestDto(
                CategoryId: categoryId.Value, // Safe due to check above
                Name: name,
                Description: description,
                DisplayOrder: displayOrder
            );

            // TODO: [#issue] Evaluate Fluxor Effect pattern vs direct API call
            
            var result = await ServiceCatalogsApi.CreateServiceAsync(request);

            if (result.IsSuccess)
            {
                Snackbar.Add("Serviço criado com sucesso!", Severity.Success);
                // Dispatch action to refresh list? 
                // The parent component might handle this on DialogResult.Ok.
                MudDialog?.Close(DialogResult.Ok(true));
            }
            else
            {
                Snackbar.Add($"Erro: {result.Error?.Message}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
             Logger.LogError(ex, "Error creating service");
             Snackbar.Add("Ocorreu um erro ao criar o serviço. Tente novamente mais tarde.", Severity.Error);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
