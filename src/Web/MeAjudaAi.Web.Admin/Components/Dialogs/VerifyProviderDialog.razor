@using MudBlazor
@using MeAjudaAi.Shared.Contracts.Modules.Providers.DTOs
@inject IProvidersApi ProvidersApi
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success">
            <MudSelect @bind-Value="selectedStatus" Label="Status de Verificação" Required="true" Variant="Variant.Outlined">
                <MudSelectItem Value="@("Verified")">Verificado</MudSelectItem>
                <MudSelectItem Value="@("Rejected")">Rejeitado</MudSelectItem>
                <MudSelectItem Value="@("Pending")">Pendente</MudSelectItem>
            </MudSelect>
            
            <MudTextField @bind-Value="notes" Label="Observações (opcional)" Lines="3" Variant="Variant.Outlined" Class="mt-4" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">Cancelar</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="@(!success || isSubmitting)">
            @if (isSubmitting)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                <MudText Class="ms-2">Atualizando...</MudText>
            }
            else
            {
                <MudText>Atualizar Status</MudText>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public Guid ProviderId { get; set; }
    [CascadingParameter] private IMudDialogInstance? DialogInstance { get; set; }

    private MudForm form = null!;
    private bool success;
    private bool isSubmitting;
    private string selectedStatus = "Verified";
    private string? notes;

    private void Cancel()
    {
        DialogInstance?.Cancel();
    }

    private async Task Submit()
    {
        await form.Validate();

        if (!success)
        {
            return;
        }

        try
        {
            isSubmitting = true;
            
            var request = new UpdateVerificationStatusRequestDto(
                VerificationStatus: selectedStatus,
                Reason: notes
            );

            var result = await ProvidersApi.UpdateVerificationStatusAsync(ProviderId, request);
            
            if (result.IsSuccess)
            {
                Snackbar.Add("Status de verificação atualizado com sucesso!", Severity.Success);
                DialogInstance?.Close(DialogResult.Ok(true));
            }
            else
            {
                Snackbar.Add($"Erro ao atualizar status: {result.Error.Message}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro ao atualizar status: {ex.Message}", Severity.Error);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
