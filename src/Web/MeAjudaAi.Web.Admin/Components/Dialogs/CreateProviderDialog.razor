@using MudBlazor
@using MeAjudaAi.Shared.Contracts.Modules.Providers.DTOs
@inject IProvidersApi ProvidersApi
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success">
            <MudGrid>
                <MudItem xs="12">
                    <MudSelect @bind-Value="model.ProviderType" Label="Tipo de Provider" Required="true" Variant="Variant.Outlined">
                        <MudSelectItem Value="@("Individual")">Individual</MudSelectItem>
                        <MudSelectItem Value="@("Business")">Business</MudSelectItem>
                    </MudSelect>
                </MudItem>
                
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="model.Name" Label="Nome / Razão Social" Required="true" Variant="Variant.Outlined" />
                </MudItem>
                
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="model.FantasyName" Label="Nome Fantasia (opcional)" Variant="Variant.Outlined" />
                </MudItem>
                
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="model.Document" Label="Documento (CPF/CNPJ)" Required="true" Variant="Variant.Outlined" />
                </MudItem>
                
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="model.Email" Label="Email" Required="true" InputType="InputType.Email" Variant="Variant.Outlined" />
                </MudItem>
                
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="model.Phone" Label="Telefone" Required="true" Variant="Variant.Outlined" />
                </MudItem>
                
                <MudItem xs="12">
                    <MudTextField @bind-Value="model.Description" Label="Descrição" Lines="3" Variant="Variant.Outlined" />
                </MudItem>
                
                <MudItem xs="12">
                    <MudText Typo="Typo.h6" Class="mt-4 mb-2">Endereço Principal</MudText>
                </MudItem>
                
                <MudItem xs="12" md="8">
                    <MudTextField @bind-Value="model.Address.Street" Label="Rua" Required="true" Variant="Variant.Outlined" />
                </MudItem>
                
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="model.Address.Number" Label="Número" Required="true" Variant="Variant.Outlined" />
                </MudItem>
                
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="model.Address.Complement" Label="Complemento" Variant="Variant.Outlined" />
                </MudItem>
                
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="model.Address.Neighborhood" Label="Bairro" Required="true" Variant="Variant.Outlined" />
                </MudItem>
                
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="model.Address.PostalCode" Label="CEP" Required="true" Variant="Variant.Outlined" />
                </MudItem>
                
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="model.Address.City" Label="Cidade" Required="true" Variant="Variant.Outlined" />
                </MudItem>
                
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="model.Address.State" Label="Estado" Required="true" Variant="Variant.Outlined" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">Cancelar</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="@(!success || isSubmitting)">
            @if (isSubmitting)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                <MudText Class="ms-2">Criando...</MudText>
            }
            else
            {
                <MudText>Criar</MudText>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public string? Title { get; set; }
    [CascadingParameter] private IMudDialogInstance? DialogInstance { get; set; }

    private MudForm form = null!;
    private bool success;
    private bool isSubmitting;
    private CreateProviderModel model = new();

    private void Cancel()
    {
        DialogInstance?.Cancel();
    }

    private async Task Submit()
    {
        await form.Validate();

        if (!success)
        {
            return;
        }

        try
        {
            isSubmitting = true;
            
            var request = new CreateProviderRequestDto(
                Name: model.Name,
                Type: model.ProviderType == "Individual" ? 0 : 1,
                BusinessProfile: new BusinessProfileDto(
                    LegalName: model.Name,
                    FantasyName: model.FantasyName,
                    Description: model.Description,
                    ContactInfo: new ContactInfoDto(
                        Email: model.Email,
                        PhoneNumber: model.Phone,
                        Website: null
                    ),
                    PrimaryAddress: new PrimaryAddressDto(
                        Street: model.Address.Street,
                        Number: model.Address.Number,
                        Complement: model.Address.Complement,
                        Neighborhood: model.Address.Neighborhood,
                        City: model.Address.City,
                        State: model.Address.State,
                        ZipCode: model.Address.PostalCode,
                        Country: "Brasil"
                    )
                ),
                Document: model.Document
            );

            var result = await ProvidersApi.CreateProviderAsync(request);
            
            if (result.IsSuccess)
            {
                Snackbar.Add("Provider criado com sucesso!", Severity.Success);
                DialogInstance?.Close(DialogResult.Ok(true));
            }
            else
            {
                Snackbar.Add($"Erro ao criar provider: {result.Error?.Message ?? "Erro desconhecido"}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro ao criar provider: {ex.Message}", Severity.Error);
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private class CreateProviderModel
    {
        public string ProviderType { get; set; } = "Individual";
        public string Name { get; set; } = string.Empty;
        public string? FantasyName { get; set; }
        public string Document { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Phone { get; set; } = string.Empty;
        public string? Description { get; set; }
        public AddressModel Address { get; set; } = new();
    }

    private class AddressModel
    {
        public string Street { get; set; } = string.Empty;
        public string Number { get; set; } = string.Empty;
        public string? Complement { get; set; }
        public string Neighborhood { get; set; } = string.Empty;
        public string PostalCode { get; set; } = string.Empty;
        public string City { get; set; } = string.Empty;
        public string State { get; set; } = string.Empty;
    }
}
