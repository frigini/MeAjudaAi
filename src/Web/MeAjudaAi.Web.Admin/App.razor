@using MeAjudaAi.Web.Admin.Components.Errors
@using MeAjudaAi.Web.Admin.Features.Errors
@using MeAjudaAi.Web.Admin.Themes
@using MeAjudaAi.Web.Admin.Services
@using Fluxor
@using System.Globalization
@inject IState<ThemeState> ThemeState
@inject IDispatcher Dispatcher
@inject ILogger<App> Logger
@inject Services.ErrorLoggingService ErrorLogger
@inject IJSRuntime JSRuntime
@inject OidcDebugService OidcDebugService
@implements IDisposable

<Fluxor.Blazor.Web.StoreInitializer />
<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="@BrandTheme.Theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<CascadingAuthenticationState>
    <ErrorBoundary @ref="_errorBoundary">
        <ChildContent>
            <Router AppAssembly="@typeof(App).Assembly">
                <Found Context="routeData">
                    <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                        <NotAuthorized Context="authContext">
                            @if (authContext.User.Identity?.IsAuthenticated != true)
                            {
                                <RedirectToLogin />
                            }
                            else
                            {
                                <MudContainer MaxWidth="MaxWidth.Medium" Class="mt-8">
                                    <MudAlert Severity="Severity.Error">
                                        <MudText Typo="Typo.h5">Acesso Negado</MudText>
                                        <MudText Typo="Typo.body1">Voc√™ n√£o tem permiss√£o para acessar esta p√°gina.</MudText>
                                    </MudAlert>
                                </MudContainer>
                            }
                        </NotAuthorized>
                        <Authorizing>
                            <div style="display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #f5f5f5;">
                                <div style="text-align: center;">
                                    <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
                                    <MudText Typo="Typo.h6" Class="mt-4">Carregando...</MudText>
                                </div>
                            </div>
                        </Authorizing>
                    </AuthorizeRouteView>
                    <FocusOnNavigate RouteData="@routeData" Selector="h1" />
                </Found>
            </Router>
        </ChildContent>
        <ErrorContent Context="error">
            @{
                // Log error and dispatch to Fluxor state
                ErrorLogger.LogComponentError(error, "App");
                Dispatcher.Dispatch(new SetGlobalErrorAction(error, "Application Root", IsRecoverable: true));
            }
            <ErrorBoundaryContent />
        </ErrorContent>
    </ErrorBoundary>
</CascadingAuthenticationState>

@code {
    private bool _isDarkMode;
    private ErrorBoundary? _errorBoundary;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        
        // Load preferred language from localStorage
        await LoadPreferredLanguage();
        
        // Realizar diagn√≥stico de OIDC/Keycloak
        await DiagnoseOidcConfiguration();
        
        // Subscribe to theme changes
        ThemeState.StateChanged += OnThemeStateChanged;
        _isDarkMode = ThemeState.Value.IsDarkMode;
    }

    private async Task DiagnoseOidcConfiguration()
    {
        try
        {
            Logger.LogInformation("üîê Iniciando diagn√≥stico de autentica√ß√£o OIDC/Keycloak");
            var healthCheck = await OidcDebugService.CheckKeycloakHealthAsync();
            Logger.LogInformation(healthCheck.GetDiagnosticSummary());

            if (!healthCheck.IsHealthy)
            {
                Logger.LogWarning("‚ö†Ô∏è Detectados problemas na configura√ß√£o de autentica√ß√£o:");
                foreach (var error in healthCheck.Errors)
                {
                    Logger.LogWarning("   - {Error}", error);
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "‚ùå Erro ao diagnosticar configura√ß√£o OIDC");
        }
    }

    private async Task LoadPreferredLanguage()
    {
        try
        {
            var preferredLanguage = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "preferredLanguage");
            
            if (!string.IsNullOrEmpty(preferredLanguage))
            {
                var culture = new CultureInfo(preferredLanguage);
                CultureInfo.CurrentCulture = culture;
                CultureInfo.CurrentUICulture = culture;
                Logger.LogInformation("Loaded preferred language: {Language}", preferredLanguage);
            }
            else
            {
                Logger.LogInformation("No preferred language found, using default: pt-BR");
            }
        }
        catch (Exception ex)
        {
            Logger.LogWarning(ex, "Failed to load preferred language from localStorage");
        }
    }

    private void OnThemeStateChanged(object? sender, EventArgs e)
    {
        _isDarkMode = ThemeState.Value.IsDarkMode;
        StateHasChanged();
    }

    /// <summary>
    /// Recupera o ErrorBoundary do estado de erro.
    /// Chamado pelo ErrorBoundaryContent quando usu√°rio clica em "Tentar Novamente".
    /// </summary>
    public void RecoverFromError()
    {
        _errorBoundary?.Recover();
    }

    public void Dispose()
    {
        ThemeState.StateChanged -= OnThemeStateChanged;
    }
}
