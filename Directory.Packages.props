<?xml version="1.0" encoding="utf-8"?>
<Project>
  <!-- Central Package Management for xUnit v3 Migration -->
  <PropertyGroup>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
    <!-- Enabled xUnit v3 -->
    <UseXUnitV3>true</UseXUnitV3>
