<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <config>
    <add key="globalPackagesFolder" value="packages" />
    <add key="repositoryPath" value="packages" />
    <add key="dependencyVersion" value="Highest" />
  </config>
  
  <packageSources>
    <clear />
    <!-- Official NuGet Gallery -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    
    <!-- Microsoft NuGet Gallery (for preview packages) -->
    <add key="dotnet-public" value="https://pkgs.dev.azure.com/dnceng/public/_packaging/dotnet-public/nuget/v3/index.json" />
    
    <!-- Aspire Packages -->
    <add key="aspire" value="https://pkgs.dev.azure.com/dnceng/public/_packaging/dotnet9/nuget/v3/index.json" />
  </packageSources>
  
  <packageSourceMapping>
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
    
    <packageSource key="dotnet-public">
      <package pattern="Microsoft.Extensions.*" />
      <package pattern="Microsoft.AspNetCore.*" />
      <package pattern="Microsoft.EntityFrameworkCore.*" />
      <package pattern="System.*" />
    </packageSource>
    
    <packageSource key="aspire">
      <package pattern="Aspire.*" />
      <package pattern="Microsoft.Extensions.ServiceDiscovery" />
    </packageSource>
  </packageSourceMapping>
  
  <disabledPackageSources>
    <!-- Disable any potentially problematic sources -->
  </disabledPackageSources>
  
  <activePackageSource>
    <add key="All" value="(Aggregate source)" />
  </activePackageSource>
</configuration>